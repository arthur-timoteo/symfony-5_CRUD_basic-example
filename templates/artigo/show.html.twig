{% extends 'base.html.twig' %}

{% block title %}CRUD - Artigo{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Artigo</h1>

        <div class="card mt-5">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2">
                        <b>Id:</b>
                    </div>
                    <div class="col-md-8 text-left">
                        {{ artigo.id }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <b>Categoria:</b>
                    </div>
                    <div class="col-md-8 text-left">
                        {{ artigo.categoria }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <b>Título:</b>
                    </div>
                    <div class="col-md-8 text-left">
                        {{ artigo.titulo }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2">
                        <b>Texto:</b>
                    </div>
                    <div class="col-md-8 text-left">
                        {{ artigo.texto }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-2">
                <a href="{{ path('artigo_edit', {'id': artigo.id}) }}" class="btn btn-warning">Editar</a>
            </div>
            <div class="col-md-2">
                <form method="post" action="{{ path('artigo_delete', {'id': artigo.id}) }}" onsubmit="return confirm('Você tem certeza que quer deletar este item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artigo.id) }}">
                    <button class="btn btn-danger">Deletar</button>
                </form>
            </div>
        </div>

        <div class="mt-5">
            <a href="{{ path('artigo_index') }}" class="btn btn-primary">Voltar para a lista</a>
        </div>
    </div>
{% endblock %}
